= render :partial => 'people/navigation'

%h3 Contact Information
%dl{:class => 'details'}
  %dt Personal E-mail Address
  %dd= value_with_placeholder  @public_profile.personal_email_address
  %dt Home Phone Number
  %dd= value_with_placeholder  @public_profile.home_phone_number
  %dt Home Mobile Number
  %dd= value_with_placeholder  @public_profile.home_mobile_number
  %dt Home Address
  %dd= value_with_placeholder  @public_profile.home_address
  %dt Home City
  %dd= value_with_placeholder  @public_profile.home_city
  %dt Home State
  %dd= value_with_placeholder  @public_profile.home_state
  %dt Home Zip
  %dd= value_with_placeholder  @public_profile.home_zip
  %dt Home Country
  %dd= value_with_placeholder  @public_profile.home_country

%h3 Other Services
%dl{:class => 'details'}
  %dt AIM Username
  %dd= value_with_placeholder  @public_profile.chat_aim
  %dt Skype Username
  %dd= value_with_placeholder  @public_profile.chat_skype
  - if @public_profile.username_twitter.present?
    %dt Twitter
    %dd= @public_profile.username_twitter

  - if @public_profile.username_linkedin.present?
    %dt LinkedIn
    %dd= @public_profile.username_linkedin

  - if @public_profile.username_facebook.present?
    %dt Facebook
    %dd= @public_profile.username_facebook

  - if @public_profile.username_flickr.present?
    %dt Flickr
    %dd= @public_profile.username_flickr

  - if @public_profile.username_instagram.present?
    %dt Instagram
    %dd= @public_profile.username_instagram

  - if @public_profile.website_url.present?
    %dt Website
    %dd= link_to @public_profile.website_url, @public_profile.website_url
